                "schema": {
                  "$ref": "#/components/schemas/DiaryDeleteProductResponse"
                }
              }
            }
          },
          "400": {
            "description": "Date must be current",
            "content": {}
          },
          "401": {
            "description": "Not authorized",
            "content": {}
          }
        }
      }
    }
