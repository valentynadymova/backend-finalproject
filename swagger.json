      "post": {
        "tags": ["Diary"],
        "summary": "Add user data to diary",
        "parameters": [],
        "description": "JWT token is required",
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "description": "User data object",
          "required": true,
          "content": {
